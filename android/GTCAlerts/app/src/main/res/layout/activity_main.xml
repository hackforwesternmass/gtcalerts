<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    android:background="@drawable/backround" tools:context=".MainActivity">

    <Button
        android:layout_marginTop="55dp"
        android:layout_marginLeft="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="Volunteer"
        android:id="@+id/button_volunteer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffc4c4c4"
        android:minWidth="200dp"
        android:alpha=".80"
         />

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Events"
        android:id="@+id/button_events"
        android:layout_below="@+id/button_volunteer"
        android:layout_alignRight="@+id/button_veggies"
        android:layout_alignEnd="@+id/button_veggies"
        android:background="#ffc4c4c4"
        android:minWidth="200dp"
        android:alpha=".80" />

    <Button
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="In Kind"
        android:id="@+id/button_kind"
        android:layout_below="@+id/button_veggies"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffc4c4c4"
        android:minWidth="200dp"
        android:alpha=".80" />

    <Button
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Veggies"
        android:id="@+id/button_veggies"
        android:layout_below="@+id/button_events"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffc4c4c4"
        android:minWidth="200dp"
        android:alpha=".80" />

</RelativeLayout>
